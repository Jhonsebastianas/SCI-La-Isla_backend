{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@productos/*": ["src/modules/productos/*"],
      "@compras.clientes/*": ["src/modules/compras-clientes/*"],
      "@commons/*": ["src/modules/commons/*"],
      "@reportes/*": ["src/modules/reportes/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}